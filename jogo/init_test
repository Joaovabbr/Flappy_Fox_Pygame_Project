import pygame

pygame.init()



#criando a tela de jogo
LARGURA = 500
ALTURA = 400
L = 50
A = 40
tela = pygame.display.set_mode((LARGURA, ALTURA))
pygame.display.set_caption('Flappy Fox')

#imagens
img_raposa = pygame.image.load('jogo/sprites/img_rap.png').convert()
img_raposa = pygame.transform.scale(img_raposa, (L, A))
img_fundo = pygame.image.load('jogo/sprites/wallpaper.jpg').convert()

#crinado variavel de rodar o jogo
jogando = True

# clock
relogio = pygame.time.Clock()
FPS = 20

ACELERACAO = 2

vel_rap_x = 0
vel_rap_y = 0

rap_x = 0
rap_y = 0


class raposa(pygame.sprite.Sprite):
    def _init_(self, img):
        # Construtor da classe mãe (Sprite).
        pygame.sprite.Sprite._init_(self)

        self.image = img
        self.rect = self.image.get_rect()
        self.rect.centerx = LARGURA / 2
        self.rect.bottom = ALTURA - 10
        self.speedx = 0

    def update(self):
        # Atualização da posição da nave
        self.rect.x += self.speedx

        # Mantem dentro da tela
        if self.rect.right > LARGURA:
            self.rect.right = LARGURA
        if self.rect.left < 0:
            self.rect.left = 0


todos_sprites = pygame.sprite.Group()
jogador = raposa(img_raposa)
todos_sprites.add(jogador)

while jogando:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            jogando = False
        
        if event.type == pygame.KEYDOWN:
            if event.type == pygame.K_SPACE:
                vel_rap_x -= 10

    tela.fill((255, 255, 255)) 
    tela.blit(img_fundo, (0,0))
    todos_sprites.draw(tela)


    vel_rap_y += ACELERACAO
    rap_y += vel_rap_y


    pygame.display.update()